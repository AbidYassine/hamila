{% extends 'base.html.twig' %}

{% block body %}
    {% block javascripts %}

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

        {% block documentReady %}

            <script>
                $(document).ready(function(){
                    $(".dateRendezVous").blur(function () {
                        var date_today =new Date().toISOString().slice(0,10);
                        var date_debutt =new Date();
                        date_debutt=$(".dateRendezVous").val();
                        if(date_debutt<date_today)
                        {
                            $(".ldebut").show()
                            $("#divLabelDateDebut").show();
                        }
                        else {
                            $(".ldebut").hide();
                            $("#divLabelDateDebut").hide();
                        }
                    })

                });
            </script>
        {% endblock documentReady %}
    {% endblock javascripts %}
    <div id="qbootstrap-services">
        <div class="container">


            {{ form_start(form, {'attr': {'class': 'appointment-wrap animate-box fadeInUp animated-fast'}}) }}
            {{ form_row(form.dateRendezVous, {'attr': {'class': 'dateRendezVous'}}) }}
            <div class="alert alert-danger" id="divLabelDateDebut"style="display: none">
                <label class="ldebut" style=" display:none">incorrect date debut</label>
            </div>
            {{ form_row(form.lieuRendezVous, {'attr': {'class': 'lieuRendezVous'}}) }}

            <input type="submit" value="modifier"class="btn btn-primary" >
            {{ form_end(form) }}
            <a href="{{ path('ali_front_mesRendezVous_view') }}">retour</a>
        </div>
    </div>
{% endblock %}