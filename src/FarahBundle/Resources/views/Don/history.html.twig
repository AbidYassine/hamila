    {% for message in app.flashes('success') %}
        <script>
            alert("{{ message }}");
        </script>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

{% endblock %}