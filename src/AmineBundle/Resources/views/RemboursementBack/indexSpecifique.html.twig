{% extends 'back.html.twig' %}
{% block content %}
    <link href={{ asset('bootstrap/bootstrap.min.css') }} rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">


                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered"  width="100%" cellspacing="0"id="dataTable">


                            <tr>
                                <th>Montantoperation</th>
                                <th>Montantrembourcement</th>
                                <th>Typerembourcement</th>
                                <th>Validation</th>
                                <th>Daterembourcement</th>
                                <th>Actions</th>

                            </tr>

                            {% for remboursement in remboursements %}
                                <tr>
                                    <td><center>{{ remboursement.montantOperation }}</center></td>
                                    <td><center>{{ remboursement.montantRembourcement }}</center></td>
                                    <td><center>{{ remboursement.typeRembourcement }}</center></td>
                                    <td><center>{{ remboursement.validation }}</center></td>
                                    <td><center>{{ remboursement.dateRembourcement }}</center></td>

                                    <td> <center><a href="{{ path('remboursementBacksupp',{'idRemboursement' : remboursement.idRemboursement}) }}" class="btn btn-danger btn-lg"><span  class="glyphicon glyphicon-trash"></span> </a></center></td>
                                    <td><center><a href="{{ path('remboursementBackShow',{'idRemboursement' : remboursement.idRemboursement}) }}" class="btn btn-success btn-lg"> <span class="glyphicon glyphicon-edit"></span></a></center> </td>

                                </tr>

                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock  %}